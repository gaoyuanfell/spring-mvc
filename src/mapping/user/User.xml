<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moka.user.dao.UserDao">

    <sql id="User">
        user,password,email,address,phone,nickName
    </sql>

    <insert id="insert" parameterType="moka.user.bo.UserEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO USER(
        <include refid="User"/>
        ) VALUES (#{user}, #{password}, #{email}, #{address}, #{phone}, #{nickName});
    </insert>

    <resultMap id="userMap" type="moka.user.vo.User">
        <id property="id" column="id"/>
        <association property="userDetail" javaType="moka.user.vo.UserDetail" column="userDetailId" select="moka.user.dao.UserDetailDao.findOne"/>
    </resultMap>

    <select id="findOne" parameterType="Integer" resultMap="userMap">
        SELECT * FROM USER WHERE id = #{id};
    </select>

    <select id="findList" resultType="hashMap">
        SELECT * FROM USER;
    </select>
    
    <select id="findCount" resultType="Integer">
        SELECT COUNT(id) FROM USER;
    </select>

    <select id="findPage" parameterType="moka.basic.page.Page" resultType="hashMap">
        SELECT * FROM USER LIMIT #{pageStart} , #{pageSize};
    </select>

</mapper>