<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moka.user.dao.UserDetailDao">

    <sql id="userDetail">
        school,hobby,diploma,idCard,address
    </sql>

    <insert id="insert" parameterType="moka.user.bo.UserDetailEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO userdetail(
        <include refid="userDetail"/>
        ) VALUES (#{school}, #{hobby}, #{diploma}, #{idCard}, #{address});
    </insert>

    <select id="findOne" parameterType="Integer" resultType="moka.user.to.UserDetailTo">
        SELECT * FROM userdetail WHERE id = #{id};
    </select>

</mapper>